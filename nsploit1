local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui")
gui.Name = "NSPLO1t"
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 80, 0, 40)
button.Position = UDim2.new(0.1, 0, 0.1, 0)
button.Text = "NS"
button.TextScaled = true
button.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
button.TextColor3 = Color3.new(1, 1, 1)
button.Parent = gui

local buttonCorner = Instance.new("UICorner")
buttonCorner.CornerRadius = UDim.new(0.3, 0)
buttonCorner.Parent = button

local nsFrame = Instance.new("Frame")
nsFrame.Size = UDim2.new(0.4, 0, 0.4, 0)
nsFrame.Position = UDim2.new(0.3, 0, 0.3, 0)
nsFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
nsFrame.Visible = true
nsFrame.Parent = gui

local nsFrameCorner = Instance.new("UICorner")
nsFrameCorner.CornerRadius = UDim.new(0.1, 0)
nsFrameCorner.Parent = nsFrame

local tabNames = {"Home", "Tp", "Misc", "Settings"}
local tabButtons = {}

for i, tabName in ipairs(tabNames) do
    local tabButton = Instance.new("TextButton")
    tabButton.Size = UDim2.new(0.1, 0, 0.08, 0)
    tabButton.Position = UDim2.new(0.02, 0, 0.25 + (i - 1) * 0.1, 0)
    tabButton.Text = tabName
    tabButton.TextScaled = true
    tabButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    tabButton.TextColor3 = Color3.fromRGB(0, 150, 255)
    tabButton.Parent = nsFrame

    local tabCorner = Instance.new("UICorner")
    tabCorner.CornerRadius = UDim.new(0.3, 0)
    tabCorner.Parent = tabButton

    tabButtons[tabName] = tabButton
end

-- Home Tab UI
local homeFrame = Instance.new("Frame")
homeFrame.Size = UDim2.new(1, 0, 0.6, 0)
homeFrame.Position = UDim2.new(0, 0, 0.3, 0)
homeFrame.BackgroundTransparency = 1
homeFrame.Parent = nsFrame

local homeText = Instance.new("TextLabel")
homeText.Size = UDim2.new(1, 0, 0.1, 0)
homeText.Position = UDim2.new(0, 0, 0.05, 0)
homeText.Text = "NS"
homeText.TextColor3 = Color3.new(1, 1, 1)
homeText.TextScaled = true
homeText.Font = Enum.Font.GothamBold
homeText.BackgroundTransparency = 1
homeText.Parent = homeFrame

local userFrame = Instance.new("Frame")
userFrame.Size = UDim2.new(1, 0, 0.15, 0)
userFrame.Position = UDim2.new(0, 0, 0.2, 0)
userFrame.BackgroundTransparency = 1
userFrame.Parent = homeFrame

-- Player Avatar Image
local avatarImage = Instance.new("ImageLabel")
avatarImage.Size = UDim2.new(0.2, 0, 1, 0)
avatarImage.Position = UDim2.new(0.02, 0, 0, 0)
avatarImage.Image = "rbxthumb://type=AvatarHeadShot&id=" .. player.UserId .. "&w=420&h=420"
avatarImage.BackgroundTransparency = 1
avatarImage.Parent = userFrame

-- Username Display
local usernameText = Instance.new("TextLabel")
usernameText.Size = UDim2.new(0.6, 0, 1, 0)
usernameText.Position = UDim2.new(0.25, 0, 0, 0)
usernameText.Text = "User: " .. player.Name
usernameText.TextColor3 = Color3.fromRGB(255, 255, 255)
usernameText.TextScaled = true
usernameText.Font = Enum.Font.Gotham
usernameText.BackgroundTransparency = 1
usernameText.TextXAlignment = Enum.TextXAlignment.Left
usernameText.Parent = userFrame

-- Game Name Display
local gameNameText = Instance.new("TextLabel")
gameNameText.Size = UDim2.new(1, 0, 0.07, 0)
gameNameText.Position = UDim2.new(0.02, 0, 0.4, 0)
gameNameText.Text = "Game: " .. game:GetService("MarketplaceService"):GetProductInfo(game.PlaceId).Name
gameNameText.TextColor3 = Color3.fromRGB(255, 255, 255)
gameNameText.TextScaled = true
gameNameText.Font = Enum.Font.Gotham
gameNameText.BackgroundTransparency = 1
gameNameText.TextXAlignment = Enum.TextXAlignment.Left
gameNameText.Parent = homeFrame

-- Settings Tab UI
local settingsFrame = Instance.new("Frame")
settingsFrame.Size = UDim2.new(1, 0, 0.6, 0)
settingsFrame.Position = UDim2.new(0, 0, 0.3, 0)
settingsFrame.BackgroundTransparency = 1
settingsFrame.Visible = false
settingsFrame.Parent = nsFrame

local colorTextBox = Instance.new("TextBox")
colorTextBox.Size = UDim2.new(0.5, 0, 0.1, 0)
colorTextBox.Position = UDim2.new(0.25, 0, 0.1, 0)
colorTextBox.PlaceholderText = "Enter text color (RGB)"
colorTextBox.Parent = settingsFrame

local applyColorButton = Instance.new("TextButton")
applyColorButton.Size = UDim2.new(0.5, 0, 0.1, 0)
applyColorButton.Position = UDim2.new(0.25, 0, 0.25, 0)
applyColorButton.Text = "Apply Color"
applyColorButton.Parent = settingsFrame

applyColorButton.MouseButton1Click:Connect(function()
    local r, g, b = colorTextBox.Text:match("(%d+),(%d+),(%d+)")
    if r and g and b then
        homeText.TextColor3 = Color3.fromRGB(tonumber(r), tonumber(g), tonumber(b))
    end
end)

local backgroundTextBox = Instance.new("TextBox")
backgroundTextBox.Size = UDim2.new(0.5, 0, 0.1, 0)
backgroundTextBox.Position = UDim2.new(0.25, 0, 0.4, 0)
backgroundTextBox.PlaceholderText = "Enter Background AssetID"
backgroundTextBox.Parent = settingsFrame

local applyBackgroundButton = Instance.new("TextButton")
applyBackgroundButton.Size = UDim2.new(0.5, 0, 0.1, 0)
applyBackgroundButton.Position = UDim2.new(0.25, 0, 0.55, 0)
applyBackgroundButton.Text = "Apply Background"
applyBackgroundButton.Parent = settingsFrame

local bgImage = Instance.new("ImageLabel")
bgImage.Size = UDim2.new(1, 0, 1, 0)
bgImage.BackgroundTransparency = 1
bgImage.Parent = nsFrame

applyBackgroundButton.MouseButton1Click:Connect(function()
    bgImage.Image = "rbxassetid://" .. backgroundTextBox.Text
end)

local function showTab(tab)
    homeFrame.Visible = (tab == "Home")
    settingsFrame.Visible = (tab == "Settings")
end

tabButtons["Home"].MouseButton1Click:Connect(function() showTab("Home") end)
tabButtons["Settings"].MouseButton1Click:Connect(function() showTab("Settings") end)

button.MouseButton1Click:Connect(function()
    nsFrame.Visible = not nsFrame.Visible
end)
