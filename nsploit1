local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui")
gui.Name = "NSPLO1t"
gui.Parent = player:WaitForChild("PlayerGui")

-- Create NS Button (Main Toggle Button)
local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 80, 0, 40) -- Made smaller
button.Position = UDim2.new(0.1, 0, 0.1, 0)
button.Text = "NS"
button.TextScaled = true
button.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
button.TextColor3 = Color3.new(1, 1, 1)
button.Parent = gui

-- Rounded corners for NS button
local buttonCorner = Instance.new("UICorner")
buttonCorner.CornerRadius = UDim.new(0.3, 0)
buttonCorner.Parent = button

-- Create NS Frame (Main UI)
local nsFrame = Instance.new("Frame")
nsFrame.Size = UDim2.new(0.4, 0, 0.4, 0)
nsFrame.Position = UDim2.new(0.3, 0, 0.3, 0)
nsFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
nsFrame.Visible = true  -- Ensure the frame is visible
nsFrame.BackgroundTransparency = 1 -- Start hidden for animation
nsFrame.Parent = gui

-- Rounded corners for NS Frame
local nsFrameCorner = Instance.new("UICorner")
nsFrameCorner.CornerRadius = UDim.new(0.1, 0)
nsFrameCorner.Parent = nsFrame

-- Version Label (NS, v0.1∞)
local versionText = Instance.new("TextLabel")
versionText.Size = UDim2.new(0.5, 0, 0.07, 0)
versionText.Position = UDim2.new(0.02, 0, 0.01, 0)
versionText.Text = "NS, v0.1∞"
versionText.TextColor3 = Color3.fromRGB(200, 200, 200)
versionText.TextScaled = true
versionText.Font = Enum.Font.Gotham
versionText.BackgroundTransparency = 1
versionText.TextXAlignment = Enum.TextXAlignment.Left
versionText.Parent = nsFrame

-- Welcome Message (Smaller)
local welcomeText = Instance.new("TextLabel")
welcomeText.Size = UDim2.new(0.5, 0, 0.07, 0)
welcomeText.Position = UDim2.new(0.02, 0, 0.08, 0)
welcomeText.Text = "Welcome, " .. player.Name
welcomeText.TextColor3 = Color3.fromRGB(200, 200, 200)
welcomeText.TextScaled = true
welcomeText.Font = Enum.Font.Gotham
welcomeText.BackgroundTransparency = 1
welcomeText.TextXAlignment = Enum.TextXAlignment.Left
welcomeText.Parent = nsFrame

-- Game Name Label (Smaller)
local gameText = Instance.new("TextLabel")
gameText.Size = UDim2.new(0.5, 0, 0.06, 0)
gameText.Position = UDim2.new(0.02, 0, 0.14, 0)
gameText.Text = "Game: " .. game:GetService("MarketplaceService"):GetProductInfo(game.PlaceId).Name
gameText.TextColor3 = Color3.fromRGB(180, 180, 180)
gameText.TextScaled = true
gameText.Font = Enum.Font.Gotham
gameText.BackgroundTransparency = 1
gameText.TextXAlignment = Enum.TextXAlignment.Left
gameText.Parent = nsFrame

-- Create Tab Buttons (Smaller, Left-Side)
local tabNames = {"Home", "Tp", "Misc"}
local tabButtons = {}

for i, tabName in ipairs(tabNames) do
    local tabButton = Instance.new("TextButton")
    tabButton.Size = UDim2.new(0.1, 0, 0.08, 0) -- Smaller
    tabButton.Position = UDim2.new(0.02, 0, 0.2 + (i - 1) * 0.1, 0) -- Left side
    tabButton.Text = tabName
    tabButton.TextScaled = true
    tabButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    tabButton.TextColor3 = Color3.fromRGB(0, 150, 255) -- Blue Text
    tabButton.Parent = nsFrame

    -- Rounded corners for tabs
    local tabCorner = Instance.new("UICorner")
    tabCorner.CornerRadius = UDim.new(0.3, 0)
    tabCorner.Parent = tabButton

    tabButtons[tabName] = tabButton
end

-- Create Home Content (NS Text)
local homeText = Instance.new("TextLabel")
homeText.Size = UDim2.new(1, 0, 0.6, 0)
homeText.Position = UDim2.new(0, 0, 0.3, 0)
homeText.Text = "NS"
homeText.TextColor3 = Color3.new(1, 1, 1)
homeText.TextScaled = true
homeText.Font = Enum.Font.GothamBold
homeText.BackgroundTransparency = 1
homeText.Parent = nsFrame

-- Create TP Content (Coming Soon + Back Button)
local tpFrame = Instance.new("Frame")
tpFrame.Size = UDim2.new(1, 0, 0.6, 0)
tpFrame.Position = UDim2.new(0, 0, 0.3, 0)
tpFrame.BackgroundTransparency = 1
tpFrame.Visible = false
tpFrame.Parent = nsFrame

local tpText = Instance.new("TextLabel")
tpText.Size = UDim2.new(1, 0, 0.3, 0)
tpText.Position = UDim2.new(0, 0, 0.1, 0)
tpText.Text = "Coming Soon"
tpText.TextColor3 = Color3.fromRGB(0, 150, 255) -- Blue Text
tpText.TextScaled = true
tpText.Font = Enum.Font.GothamBold
tpText.BackgroundTransparency = 1
tpText.Parent = tpFrame

local backButton = Instance.new("TextButton")
backButton.Size = UDim2.new(0.5, 0, 0.2, 0)
backButton.Position = UDim2.new(0.25, 0, 0.6, 0)
backButton.Text = "Back to Home"
backButton.TextScaled = true
backButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
backButton.TextColor3 = Color3.new(1, 1, 1)
backButton.Parent = tpFrame

